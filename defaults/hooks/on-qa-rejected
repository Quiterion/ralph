#!/bin/bash
#
# on-qa-rejected - Triggered when QA fails
#
# Pings the implementer to address QA feedback.
#
# Environment:
#   WIGGUM_TICKET_ID    - The ticket ID
#   WIGGUM_TICKET_PATH  - Full path to ticket file
#   WIGGUM_PREV_STATE   - Previous state (qa)
#   WIGGUM_NEW_STATE    - New state (implement)
#   WIGGUM_PANE         - Pane that triggered transition (qa agent)
#   WIGGUM_SESSION      - tmux session name
#

TICKET_ID="${1:-$WIGGUM_TICKET_ID}"

echo "[hook] QA rejected for $TICKET_ID"

# Get the assigned implementer pane
IMPL_PANE=$(grep 'assigned_pane:' "$WIGGUM_TICKET_PATH" | awk '{print $2}')

# Ping the implementer if still running
if [[ -n "$IMPL_PANE" ]]; then
    wiggum ping "$IMPL_PANE" "QA feedback added to your ticket. Please address and re-submit." 2>/dev/null || true
fi
